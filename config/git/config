[core]
    excludesfile = ~/.cvsignore
[user]
    email = alexwh@users.noreply.github.com
    name = Alex W
[push]
    default = simple
	autoSetupRemote = true
[commit]
    verbose = 1
[alias]
    s       = status -s
    st      = status -s
    c       = commit
    ci      = commit
    co      = checkout
    diff    = diff --color-words --ignore-space-at-eol
    ds      = diff --staged
    grep    = grep -iI
    subup   = submodule update --init --recursive
    subpull = submodule update --init --remote
    blame   = blame -w -C -C -C
    pushf   = push --force-with-lease
    ls      = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    lgr     = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
[pull]
    rebase = true
[log]
    date = auto:human
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
