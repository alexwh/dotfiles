[core]
    excludesfile = ~/.cvsignore
[user]
    email = alexwh@users.noreply.github.com
    name = Alex W
[push]
    default = simple
[commit]
    verbose = 2
[alias]
    s       = status -s
    st      = status -s
    c       = commit
    ci      = commit
    co      = checkout
    diff    = diff --color-words
    ds      = diff --staged
    grep    = grep -iI
    subup   = submodule update --init --recursive
    subpull = submodule update --init --remote
    ls      = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    lgr     = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
[pull]
    rebase = true
[log]
    date = auto:human
