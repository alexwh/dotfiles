[core]
	excludesfile = ~/.cvsignore
[user]
	email = github@alexwh.com
	name = Alex W
[push]
	default = simple
[alias]
	st      = status -s
	ci      = commit --verbose
	co      = checkout
	cob     = checkout -b
	diff    = diff --word-diff
	dc      = diff --cached
	addi    = add --interactive
	grep    = grep -iI
	subup   = submodule update --init --recursive
	subpull = submodule update --init --remote
	le      = log --oneline --decorate
	ls      = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	lgr     = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
[color]
	ui = true
