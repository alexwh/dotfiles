"3.8.1 (created: 2013/11/21 23:49:14)

colorscheme molokai
source! /home/alex/.vimperatorrc.local
let mapleader=","

set titlestring=Firefox
set gui=addons,nobookmarks,nomenu,nonavigation,tabs

nmap <C-j> <C-d>
nmap <C-k> <C-u>
nnoremap <C-h> gT
nnoremap <C-l> gt
nnoremap [ [[<ESC>
nnoremap ] ]]<ESC>

nnoremap j 3j
nnoremap k 3k

nnoremap Y ;y
nnoremap a <nop>
nnoremap A <nop>

highlight Hint font-size:125%;color:white;background-color:green;padding:2px;

" maybe use https://github.com/Earnestly/dotfiles/blob/master/.config/pentadactyl/plugins/launchv.js instead
command mpvp execute "silent !(mpv '" + window.content.location.href + "' &)"
nnoremap <leader>m :mpvp

nnoremap <leader>h :noh<cr>
nnoremap <leader># :emenu History.Show All History<cr>
nnoremap <leader>p :emenu Edit.Preferences<cr>

